  $('#command-wrapper .closeFloaty').on('click', function(e){
    var command = $('#command-wrapper');
    if (!command.hasClass('shrink')){
      command.addClass('shrink');
    }
  });

  $('#command-wrapper .openFloaty').on('click', function(e){
    var command = $('#command-wrapper');
    if (command.hasClass('shrink')){
      command.removeClass('shrink');
