<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= current_page.data.title %></title>

    <!-- Latest compiled and minified Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= stylesheet_link_tag "normalize", "all", "simple-sidebar", "hamburger.min"%>
    <%= javascript_include_tag  "all" %>
  </head>
  <body class="<%= page_classes %>">

  <div id="wrapper" class="toggled">

        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="container-fluid">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Zuuby <span class="glyphicon glyphicon-knight"></span>
                    </a>
                </li>
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-th"></span></a>
                </li>
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-wrench"></span></a>
                </li>
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-dashboard"></span></a>
                </li>
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-thumbs-up"></span></a>
                </li>
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-link"></span></a>
                </li>
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-home"></span></a>
                </li class="col-md-6">
                <li class="col-md-6">
                    <a href="#"><span class="glyphicon glyphicon-envelope"></span></a>
                </li>
            </ul>
        </div>
        <!-- End Sidebar -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button id="menu-toggle" class="hamburger hamburger--collapse" type="button">
              <span class="hamburger-box">
                <span class="hamburger-inner"></span>
              </span>
            </button>

          <%= yield %>
        </div>
        <!-- End Page Content -->

    </div>
    <!-- End Wrapper -->
    
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <!-- Latest compiled and minified Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $(this).toggleClass("is-active");
        $("#wrapper").toggleClass("toggled");
    });
    </script>
  </body>
</html>